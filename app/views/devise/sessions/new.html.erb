<div class="full-height row middle-xs white-text center-xs main-backgroun no-margin">
  <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
    <div class="box">
      <div class="big-padding dark-blue white-text relative">
        <div>
          <div class="rose white-text absolute mdl-shadow--2dp" style="position:relative; top:-90px; padding:10px;">
            <h2 class="no-margin big-font pacifico-font">Iniciar Sesión</h2>
            <p>Control total de tu negocio y comunicación con tus clientes</p>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group">
            <%= f.label :email, class: 'bmd-label-floating' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.password_field :password, autocomplete: "current-password", class: 'mdl-textfield__input' %>
              <%= f.label :password, class: 'mdl-textfield__label' %>
            </div>


            <div class="actions">
              <%= f.submit "Ingresar", class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect' %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <label for="chkbox1" class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
                <input type="checkbox" id="chkbox1" class="mdl-checkbox__input">
                <span class="mdl-checkbox__label">Enable AutoSave</span>
              </label>

            <% end -%>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
