<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :price_sale %>
    <%= form.text_field :price_sale %>
  </div>

  <div class="field">
    <%= form.label :price_cost %>
    <%= form.text_field :price_cost %>
  </div>

  <div class="field">
    <%= form.label :price_offer %>
    <%= form.text_field :price_offer %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state %>
  </div>

  <div class="field">
    <%= form.label :offer %>
    <%= form.text_field :offer %>
  </div>

  <div class="field">
    <%= form.label :stock %>
    <%= form.number_field :stock %>
  </div>

  <div class="field">
    <%= form.label :min_stock %>
    <%= form.number_field :min_stock %>
  </div>

  <div class="field">
    <%= form.label :bar_code %>
    <%= form.number_field :bar_code %>
  </div>

  <div class="field">
    <%= form.label :serial_number %>
    <%= form.text_field :serial_number %>
  </div>

  <div class="field">
    <%= form.label :brand_id %>
    <%= form.collection_select :brand_id, @brand,:id,:name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :unit_id %>
    <%= form.collection_select :unit_id, @unit,:id,:title, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :sub_category_id %>
    <%= form.collection_select :sub_category_id, @sub_category,:id,:name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :provider_id %>
    <%= form.collection_select :provider_id, @provider,:id,:name, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
