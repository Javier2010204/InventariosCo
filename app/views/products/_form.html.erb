    <%= form.number_field :price_sale, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label container">
    <%= form.label 'Precio de compra', class: 'mdl-textfield__label' %>
    <%= form.number_field :price_cost, class: 'mdl-textfield__input' %>
