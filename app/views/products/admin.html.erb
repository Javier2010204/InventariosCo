<div class="row center-xs full-height middle-xs">
	<div class="col-xs-12 col-lg-8 mdl-shadow--2dp white circle-border">
		<div class="box">
			<div class="big-padding white" style="border-radius: 5px;">
				<div class="white-text green absolute mdl-shadow--2dp login-card" style="">
					<h1 class="no-margin medium-font text-left"><%=@product.name%></h1>
					<%=link_to product_path(id: @product.id, client: true), class: 'mdl-button mdl-js-button white-text' do %>
						<i class="material-icons margin-right">face</i><span>Ver como cliente</span>
					<%end%>
					<%=link_to edit_product_path(), class: 'mdl-button mdl-js-button white-text' do %>
						<i class="material-icons margin-right">create</i><span>Editar</span>
					<%end%>
					<%=link_to product_path(id: @product.id, client: true), class: 'mdl-button mdl-js-button white-text' do %>
						<i class="material-icons margin-right">delete_forever</i><span>Eliminar</span>
					<%end%>
            	</div>
            	<div class="row">
    				<div class="col-xs-12 col-sm-5">
        				<div class="box">
            				<div class="image-container">
            					<%=image_tag @product.avatar.url%>
            				</div>
        				</div>
    				</div>
    				<div class="col-xs col-sm-7">
        				<div class="box">
            				<div class="demo-list-action mdl-list">
            					<div class="mdl-list__item">
            						<span class="mdl-list__item-primary-content">
            							<i class="material-icons mdl-list__item-avatar">trending_up</i>
            							<span>Total de ventas</span>
            						</span>
            						<span class="mdl-list__item-secondary-content">
										<p>Q500000</p>
									</span>
            					</div>
            					<div class="mdl-list__item">
            						<span class="mdl-list__item-primary-content">
            							<i class="material-icons mdl-list__item-avatar">call_made</i>
            							<span>Precio de venta</span>
            						</span>
            						<span class="mdl-list__item-secondary-content">
										<p>Q.<%= @product.price_sale%></p>
									</span>
            					</div>
            					<div class="mdl-list__item">
            						<span class="mdl-list__item-primary-content">
            							<i class="material-icons mdl-list__item-avatar">call_received</i>
            							<span>Precio de compra</span>
            						</span>
            						<span class="mdl-list__item-secondary-content">
										<p>Q.<%= @product.price_cost%></p>
									</span>
            					</div>
            					<div class="mdl-list__item">
            						<span class="mdl-list__item-primary-content">
            							<i class="material-icons mdl-list__item-avatar">store</i>
            							<span>Disponibilidad en tienda</span>
            						</span>
            						<span class="mdl-list__item-secondary-content">
										<p><%= @product.stock %></p>
									</span>
            					</div>
            					<div class="mdl-list__item">
            						<span class="mdl-list__item-primary-content">
            							<i class="material-icons mdl-list__item-avatar">person</i>
            							<span>Proveedor</span>
            						</span>
            						<span class="mdl-list__item-secondary-content">
										<p><%= link_to @product.provider.name, @product.provider, class: 'no-decoration' %></p>
									</span>
            					</div>
            				</div>
        				</div>
    				</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row center-xs">
    <div class="col-xs-12 col-lg-8 mdl-shadow--2dp white circle-border">
        <div class="box">
        <div>
            <h2 class="">Imagenes</h2>
                <ol>
                    <% @product.attachments.each do |attachment|%>
                        <li class="large-padding medium-font grey">
                            <%= attachment.archivo_file_name%>
                            <%= link_to attachment, method: :delete, :"data-confirm" => 'estas seguro de elimiar el archivo?', class: 'red-text' do %>
                                <i class="material-icons">delete_forever</i>
                            <%end%>
                        </li>
                    <%end%>
                </ol>
                <%= render 'attachments/form', product_id: @product.id %>
            </div>
        </div>  
    </div>
</div>
