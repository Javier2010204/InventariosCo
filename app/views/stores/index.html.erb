<div class="row center-xs middle-xs full-height">
  <div class="col-xs-12 col-lg-10 mdl-shadow--2dp white circle-border">
    <div class="box">
      <div class="card-floating">
        <i class="material-icons text-left">assignment</i>
      </div>
      <h1>Mis sucursales</h1>
      <div class="row top-space center-xs">
        <div class="col-xs-12 col-lg-7">
          <div class="box">
          <table class="mdl-data-table mdl-js-data-table border-top">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Apertura</th>
                <th>Cierre</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @stores.each do |store| %>
                <tr>
                  <td><%= store.name %></td>
                  <td><%= store.address %></td>
                  <td><%= store.phone %></td>
                  <td><%= store.opening %></td>
                  <td><%= store.closing %></td>
                  <td>
                    <%= link_to 'ver', store %>
                    <%= link_to 'editar', edit_store_path(store) %>
                    <%= link_to 'eliminar', store, method: :delete, data: {confirm: 'esta seguro que desea eliminar?'}%>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="btn-floating">
  <%= button_to new_store_path(), method: :get, class:"mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-js-ripple-efect" do %>
    <i class="material-icons">add</i>
  <% end %>
</div>
